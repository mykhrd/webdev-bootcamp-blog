<%- include("partials/header") -%>
<h1>Home</h1>
<p>
    <%= homeContent %>
</p>

<div>

    <% posts.forEach(function (post) { %>
        <h2>
            <a href="/posts/<%= post.postUrl %>">
                <%= post.postTitle %>
            </a>
        </h2>
        <p><%= post.postContent.substring(0, 100) + "..." %></p>
        <a href="/posts/<%= post.postUrl %>">
            READ MORE
        </a>
    <% }) %>
</div>

<%- include("partials/footer") -%>
